    <style>
        .pink-block {
            display: flex;
            background-color: #fc4893;
            color: white;
            padding: 20px;
            border-radius: 10px;
            align-items: center;
            margin-bottom: 20px; /* To add some space below the block */
        }
        .pink-block img {
            max-width: 200px;
            max-height: 200px;
            margin-right: 20px;
            flex-shrink: 0;
        }
        .pink-block .text {
            flex: 1;
        }

        * {
            box-sizing: border-box;
        }
        
        /* Style the body with arial and removing default margin */
        body {
            font-family: Arial, Helvetica, sans-serif;
            margin: 0;
        }
        
        /* Style form elements with a flexible column layout and gap between items */
        form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        
        /* Style form labels with bold text */
        label {
            font-weight: bold;
        }
        
        /* Style form inputs and select elements with padding, font size, border, and border radius */
        select,
        input[type="text"],
        input[type="submit"],
        input[type="reset"] {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        
        /* Style submit and reset buttons with background color, text color, no border, and pointer cursor */
        input[type="submit"],
        input[type="reset"] {
            background-color: #f4257b;
            color: white;
            border: none;
            cursor: pointer;
        }
        
        /* Change the background color of submit and reset buttons on hover */
        input[type="submit"]:hover,
        input[type="reset"]:hover {
            background-color: #d0145b;
        }
        
        /* Media query for screens with a maximum width of 800px */
        @media (max-width: 800px) {
            nav {
                display: block; /* Show navigation bar on smaller screens */
            }
        
            .sidebar {
                display: none; /* Hide sidebar on smaller screens */
            }
        
            .container {
                flex-direction: column; /* Stack flex items vertically */
            }
        }
        
        /* Media query for screens with a minimum width of 801px */
        @media (min-width: 801px) {
            nav {
                display: none; /* Hide navigation bar on larger screens */
            }
        }
        
      
        
        /* Style the checkbox group with flex layout, center alignment, gap between items, and margin top */
        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-top: 10px;
        }
         
        /* This is to style the error in case the field is left blank. */
        .error {
            color: red;
            margin-top: 10px;
        }
    </style>
</head>
